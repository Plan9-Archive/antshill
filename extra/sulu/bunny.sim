fn siminit{
	simend=48
	simlimit=24
	state=meadow
	sendout=$state
	echo ___INITIATE $dim dimensional simulation
	echo $state
}

fn updatestate{
	if(! ~ $state ROCK){
		if(~ $body(1) METEOR){
			echo a ROCK falls from the sky
			state=ROCK
		}
		if(~ $body(1) BUNNY){
			echo a BUNNY hops along
			state=($body $state)
		}
		if(~ $body(1) GLENDA){
			echo its GLENDA
			state=($body)
		}
	}
	sendout=$state
	echo $cvt ':' $state 
}
