fn bun {
	if(~ $2 all)
		for(i in `{ls /n/????/in}){echo $1 0 0 0 pos 0.0 BUNNY >>$i}
	if not
		echo $1 0 0 0 pos 0.0 BUNNY >>/n/$2/in
}

