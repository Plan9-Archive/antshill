fn step {
	if(~ $1 ?){
		for(i in `{seq 1 $1})
			for(j in `{ls /n/????/in}){echo STEP >>$j}
	}
	if not if(~ $#1 1)
		echo step >>/n/$1/in
	if not
		for(i in `{ls /n/????/in}){echo STEP >>$i}
}

fn fullrun {
	mead 0 all
	step
	step
	step
	step
	step
	step
	step
	step
	step
}

fn clearall {
	rock 0 all
	step
	step
	step
	step
	step
	step
	step
	step
	mead 0 all
}
