#!/bin/rc
# prototype proof of concept timewarping rc script

fn parsemsg{
	vrt=$msg(1)
	vst=$msg(2)
	rcvr=$msg(3)
	sndr=$msg(4)
	sign=$msg(5)
	gid=$msg(6)
	body=$msg(7-)
}

fn cancelinq{
	for(i in `{ls inq}){
		chksign=`{cat $i}
		if(~ $chksign(5) neg){
			for(j in `{ls inq}){
				chkmatch=`{cat $j}
				if(~ $chkmatch(5) pos){
					if(~ $chkmatch(6) $chksign(6)){
						echo removing $i $j
						rm $i
						rm $j
					}
				}
			}
		}
	}
}

dim=`{echo -n $mynum |wc -c}
echo ___INITIATE $dim dimensional simulation
cd /tmp/$mynum
rm state.*
rm inq/*
rm antiq/*
cvt=0
accum=meadow
#if(~ $mynum 0000)
#	accum=BUNNY
echo begin accum $accum
echo $accum >state.$cvt
sleep 30

while(test $cvt -lt 16){
	cvt=`{echo $cvt + 1 |hoc}
	echo $cvt _____ $cvt cvt
	port=`{echo $cvt - 1 |hoc}
	if(test $port -ge $dim)
		port=`{echo $port^' % '^$dim |hoc}
	if(test $cvt -gt 8)
		port=$dim
	outmsg=($cvt $cvt $port $mynum pos $mynum.$cvt $accum)
	antimsg=($cvt $cvt $port $mynum neg $mynum.$cvt $accum)
	prevmsg=`{cat antiq/$cvt >[2] /dev/null} 
	if(test $#prevmsg -gt 5){
		if(~ $"antimsg $"prevmsg)
			echo LAZY $antimsg
		if(! ~ $"antimsg $"prevmsg){
#			echo ANTI $prevmsg to /n/cube/$port
			echo $prevmsg >>/n/cube/$port
#			echo SEND $outmsg to /n/cube/$port
			echo $outmsg >>/n/cube/$port
			echo $antimsg >antiq/$cvt
		}
	}
	if(! test $#prevmsg -gt 5){
#		echo SENDNOPREV $outmsg to /n/cube/$port
		echo $outmsg >>/n/cube/$port
		echo $antimsg >antiq/$cvt
	}
	echo $accum >state.$cvt
	msg=`{read}
#	echo RECV msg $msg
	if(test $#msg -gt 5){
		parsemsg
		echo $msg >inq/$vrt
		if(test $vrt -lt $cvt){
			cvt=$vrt
			echo ROLLBACK to $cvt
			if(test -e state.$cvt){
#				echo LOADING accum to state at cvt $cvt
				accum=`{cat state.$cvt >[2] /dev/null}
			}
		}
		cancelinq
	}
	if(test -e inq/$cvt){
		msg=`{cat inq/$cvt >[2] /dev/null}
		parsemsg
		if(~ $accum ROCK)
			echo rock block
		if not if(~ $sign pos){
#			echo UPDATE $accum plus $body
			if(~ $body(1) METEOR){
				echo a ROCK falls from the sky
				accum=ROCK
			}
			if(~ $body(1) BUNNY){
				echo a BUNNY hops along
				accum=($body $accum)
			}
			if(~ $body(1) GLENDA){
				echo its GLENDA
				accum=($body)
			}
		}
	}
	echo '**' $accum '**'
}
