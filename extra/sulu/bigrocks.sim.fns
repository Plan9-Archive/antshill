fn step {
	if(~ $1 ?){
		for(i in `{seq 1 $1})
			for(j in `{ls /n/??????/in}){echo STEP >>/n/$j}
	}
	if not if(~ $#1 1)
		echo step >>/n/$1/in
	if not
		for(i in `{ls /n/??????/in}){echo STEP >>/n/$i}
}

fn freeze {
	for(i in `{ls /n/??????/ctl}){echo freeze >>/n/$i}
}

fn melt {
	for(i in `{ls /n/??????/ctl}){echo melt >>/n/$i}
}
