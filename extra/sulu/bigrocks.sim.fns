fn base {
	if(~ $2 all)
		for(i in `{ls /n/??????/in}){echo $1 0 0 0 pos 0.0 adm starbase 0 25 2 >>/n/$i}
	if not
		echo $1 0 0 0 pos 0.0 adm starbase 0 25 2 >>/n/$2/in
}

