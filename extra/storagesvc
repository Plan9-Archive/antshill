#!/bin/rc

rfork
while(usercmd=`{read}){
	switch($usercmd){
	case spawn*
		spawnroot -l $usercmd(2) $usercmd(3) &
	case fetch*
		echo fetch not supported on storage node
	case save*
		savesnap -r /srv/^$usercmd(2) -s /srv/^$usercmd(2)^fscons $usercmd(3) &
	case clean*
		echo clean
	case exit
		exit
	case *
		echo unknown
	}
}

