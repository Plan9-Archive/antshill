#!/bin/rc

rfork
scorefile=/shr/9fat/scorenames
listenport=10564
rootname=foo

while(~ $1 -*){
	switch($1){
	case -l
		listenport=$2
		shift
	case -v
		scorefile=$2
		shift
	}
	shift
}

rootname=$1

. $scorefile

namefossil -l $listenport $$rootname $rootname $rootname
mv /tmp/killscript /tmp/kill.$rootname
